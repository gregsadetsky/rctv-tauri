{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rctv-tauri",
  "version": "0.1.0",
  "identifier": "com.recurse.rctv",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "rctv-tauri",
        "width": 800,
        "height": 600,
        "fullscreen": true,
        "decorations": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "RCTV Kiosk App",
      "longDescription": "A fullscreen kiosk app that cycles through URLs from the RCTV API",
      "args": [
        {
          "name": "token",
          "description": "TV login token for RCTV API access",
          "takesValue": true,
          "required": true
        }
      ]
    },
    "updater": {
      "endpoints": ["https://raw.githubusercontent.com/gregsadetsky/rctv-tauri/main/latest.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEExOUM0NEQ1MDUzOTdFODkKUldTSmZqa0YxVVNjb1VLeS9RcFFUVkIvTEhkY3ZURjliSlQ5Um1lc3NGcXpsSitoUXN1RDB6T3UK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
